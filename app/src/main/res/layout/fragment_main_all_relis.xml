<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:layout_below="@+id/home_layout"
    android:layout_alignBottom="@+id/home_layout"
    android:orientation="vertical" >

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/add_discussion_btn_all_relis"
        android:text="+"
        android:background="@drawable/round_button"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginBottom="@dimen/pad_10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <include layout="@layout/circle_page_indicator_item"
        android:id="@+id/circles_title_hidden_all"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/no_all_relis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_relis_all"
        android:textColor="@color/main_color_gray_dk"
        android:textSize="@dimen/txt_13sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_above="@id/add_discussion_btn_all_relis"
        android:layout_below="@id/circles_title_hidden_all"/>

    <ListView
        android:id="@+id/list_all_relis"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/main_color_green"
        android:dividerHeight="1dp"
        tools:listitem="@layout/discussion_item"
        android:layout_above="@id/add_discussion_btn_all_relis"
        android:layout_below="@id/circles_title_hidden_all" />

</RelativeLayout>
